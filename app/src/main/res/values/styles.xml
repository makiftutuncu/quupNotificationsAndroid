<resources>

    <!-- Base application theme which is based on light material theme with dark action bar -->
    <style name="QuupNotifications.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main colors of the app -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/QuupNotifications.Toolbar</item>

        <!-- ActionBar style -->
        <!-- Affects ActionBar button text colors -->
        <item name="actionMenuTextColor">?android:attr/textColorPrimaryInverseDisableOnly</item>
        <!-- Affects ActionBar overflow button color -->
        <item name="colorControlNormal">?android:attr/textColorPrimaryInverse</item>
    </style>

    <!-- Customized toolbar style -->
    <style name="QuupNotifications.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/QuupNotifications.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/QuupNotifications.Toolbar.Subtitle</item>
    </style>

    <!-- Customized toolbar title style -->
    <style name="QuupNotifications.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <!-- Customized toolbar subtitle style -->
    <style name="QuupNotifications.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <!-- Application theme -->
    <style name="QuupNotifications" parent="QuupNotifications.Base" />

</resources>
